<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cen.complit.nitoumbrella.SplashScreen"
    >

    <ImageView
        android:id="@+id/logo_splash"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/powered_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/powered_by"
        android:layout_below="@+id/logo_splash"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="@color/pale_blue"
        android:fontFamily="sans-serif-medium"
        android:layout_alignRight="@+id/logo_splash"
        android:layout_alignEnd="@+id/logo_splash"
        android:layout_alignLeft="@+id/logo_splash"
        android:layout_alignStart="@+id/logo_splash" />

</RelativeLayout>
